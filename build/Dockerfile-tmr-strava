FROM golang:1.23 AS build

WORKDIR /app
ARG version
ENV VERSION $version
COPY go.mod go.sum ./
RUN go mod download
COPY app/ ./app/
COPY internal/ ./internal/
COPY build/Makefile ./

RUN make


FROM gcr.io/distroless/base-debian12
WORKDIR /opt/tmr
COPY --from=build app/app/tmr-strava/tmr-strava .
COPY token.json .
ENTRYPOINT ["./tmr-strava"]
